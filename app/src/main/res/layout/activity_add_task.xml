<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header with Futuristic Styling -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE OBJECTIVE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#80FFFF"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.1"
            android:paddingBottom="16dp"
            android:drawableStart="@drawable/ic_hologram"
            android:drawablePadding="8dp" />

        <!-- Task Name Input with Cyber Styling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/task_panel_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TASK PARAMETERS"
                android:textSize="16sp"
                android:textColor="#7B68EE"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp" />

            <EditText
                android:id="@+id/taskNameEditText"
                android:hint="Task Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/holographic_input"
                android:padding="12dp"
                android:textColorHint="#80FFFFFF"
                android:textColor="#E0FFFF"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.05" />

            <EditText
                android:id="@+id/taskDescriptionEditText"
                android:hint="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/holographic_input"
                android:padding="12dp"
                android:minLines="2"
                android:layout_marginTop="12dp"
                android:textColorHint="#80FFFFFF"
                android:textColor="#E0FFFF"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.05" />

            <Spinner
                android:id="@+id/taskCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/holographic_input"
                android:padding="12dp"
                android:textColor="#E0FFFF"
                android:textColorHint="#80FFFFFF"
                android:layout_marginTop="12dp"
                android:popupBackground="#1A1B2F" />
        </LinearLayout>

        <!-- Time Parameters with Neon Styling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/task_panel_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME COORDINATES"
                android:textSize="16sp"
                android:textColor="#7B68EE"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp" />

            <EditText
                android:id="@+id/taskDurationEditText"
                android:hint="Duration (e.g., 45 mins)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/holographic_input"
                android:padding="12dp"
                android:drawablePadding="8dp"
                android:textColorHint="#80FFFFFF"
                android:textColor="#E0FFFF"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/taskDateEditText"
                    android:hint="Select Date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/holographic_input"
                    android:padding="12dp"
                    android:focusable="false"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"
                    android:layout_marginEnd="6dp"
                    android:textColorHint="#80FFFFFF"
                    android:textColor="#E0FFFF"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.05" />

                <EditText
                    android:id="@+id/taskTimeEditText"
                    android:hint="Select Time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/holographic_input"
                    android:padding="12dp"
                    android:focusable="false"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="6dp"
                    android:textColorHint="#80FFFFFF"
                    android:textColor="#E0FFFF"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.05" />
            </LinearLayout>
        </LinearLayout>

        <!-- Save Button with Neon Effect -->
        <Button
            android:id="@+id/saveTaskButton"
            android:text="SAVE OBJECTIVE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/neon_button"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"/>

        <!-- Tasks List Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MISSION OBJECTIVES"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#7B68EE"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:paddingBottom="8dp" />

        <!-- Tasks List with Holographic Background -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tasksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_panel_background"
            android:elevation="8dp"
            android:padding="12dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp" />

        <!-- Bottom Actions with Futuristic Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/btnAddTask"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ADD TASK"
                android:textSize="12sp"
                android:background="@drawable/cyber_button"
                android:textColor="#DDFFF7"
                android:layout_marginEnd="8dp"
                android:drawableTop="@drawable/ic_add_task"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-condensed" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="CLEAR"
                android:textSize="12sp"
                android:background="@drawable/cyber_button"
                android:textColor="#DDFFF7"
                android:layout_marginEnd="8dp"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-condensed" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:textSize="12sp"
                android:background="@drawable/cyber_button"
                android:textColor="#DDFFF7"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-condensed" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>